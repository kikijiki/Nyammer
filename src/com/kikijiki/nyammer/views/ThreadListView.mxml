<?xml version="1.0" encoding="utf-8"?>
<components:ThreadListComponent 
	xmlns:fx="http://ns.adobe.com/mxml/2009" 
	xmlns:s="library://ns.adobe.com/flex/spark" 
	xmlns:mx="library://ns.adobe.com/flex/mx" 
	xmlns:components="com.kikijiki.nyammer.components.*"
	skinClass="com.kikijiki.nyammer.skins.ThreadListPanelSkin"
	doubleClickEnabled="true"
	title="スレッド">
	<components:ScrollableList id="threadList" width="100%" height="100%" dataProvider="{sortedThreadsView}"
							   itemRenderer="com.kikijiki.nyammer.renderers.ThreadRenderer"
							   skinClass="com.kikijiki.nyammer.skins.FixedListSkin"
							   autoScroll="false"
							   horizontalScrollPolicy="off">
		<components:layout>
			<s:VerticalLayout gap="0"/>
		</components:layout>
	</components:ScrollableList>
</components:ThreadListComponent>
